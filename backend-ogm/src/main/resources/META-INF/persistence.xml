<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="fenixframework-persistence-unit" transaction-type="JTA">
        <!-- Use Hibernate OGM provider: configuration will be transparent -->
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

        <!-- (even tought it's the default,) the next line is necessary.
             Otherwise only the jar file containing this persistence.xml will
             be scanned for orm.xml -->
        <mapping-file>META-INF/orm.xml</mapping-file>

        <properties>
            <!-- or any transaction manager lookup implementation you want in your environment -->
            <property name="hibernate.transaction.jta.platform" 
                      value="org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform" />

            <!-- <property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider" /> -->

            <property name="hibernate.cache.use_second_level_cache" value="false" />

            <!-- <property name="hibernate.ogm.infinispan.configuration_resourcename" value="infinispanNoFile.xml" /> -->
            <!-- <property name="hibernate.cache.use_query_cache" value="true" /> -->
        </properties>
    </persistence-unit>
</persistence>


